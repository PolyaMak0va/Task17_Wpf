<Window x:Class="Task17_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task17_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:ColorChanged x:Name="colorChanged" 
                            Margin="5"
                            Grid.Row="0"
                            NewColorChanged="colorChanged_NewColorChanged"/>
        <TextBlock x:Name="txtBlock"
                   Margin="0,200,0,0"/>
    </Grid>
</Window>
